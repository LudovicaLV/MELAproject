{
    Token name, probName, update, updateloc; 
}
{
    <LANG>
    <DASH>
    <LR>
    [
    	name = <IDENTIFIER>
    ]
    <COMMA>
    [
    	probName = <IDENTIFIER>
    ]
    <RR>
    symbol = <MELASYMBOL>
